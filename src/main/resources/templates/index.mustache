            <tr>
                <td>{{id}}</td> <!-- List에서 뽑아낸 객체의 필드를 사용합니다.-->
                <td>
                    <a href="/posts/update/{{id}}"> <!-- 1) -->
                        {{title}}
                    </a>
                </td>
                <td>{{author}}</td>
                <td>{{createdDate}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
